{
  "cSpell.words": [
    "gsettings",
    "lefthook",
    "Qiita",
    "senkenn",
    "sqls",
    "sqlsurge",
    "xremap",
    "zenn"
  ],
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  },
  "markdown.extension.toc.orderedList": false,
  "markdown.extension.orderedList.marker": "one",
  "pasteImage.path": "../images/${currentFileNameWithoutExt}",
  "markdown-image.base.fileNameFormat": "${mdname}/${YY}-${MM}-${DD}-${HH}-${mm}-${ss}",
  "markdownlint.config": {
    "MD034": false,
    "MD045": false
  },
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",
  "markdown.copyFiles.destination": {
    "articles/*.md": "/images/${documentBaseName}/image.${fileName/^(.+)\\.([^.]+)/$2/}"
  }
}
